    ##Numbers user input numbers, consecutive(output)
    
    userin=int(input())
    for i in range(userin):
        print(i)
    
    ##Even number or odd number
    a=int(input())
    
    if a%2==0:
        print("The number is even")
    else:
        print("The number is odd")
    
    ###factorial using for loop
    
    a=int(input())
    factorial=1
    
    for i in range(1,a+1):
        factorial*=i
    
    ###factorial using while loop    
    a=int(input())
    factorial=1
    i=1
    
    while i<=a:
        factorial*=i
        i=i+1
        
    ##sum of numbers(user input=5) then it takes from 1 to 5
    
    a=int(input())
    result=0
    i=1
    while i <=a:
        result+=i
        i=i+1
    
    #Multiplication Number
    
    a=int(input())
     
    for i  in range(1,10):
        result=a*i
        print(result)
    
